@model List<WebBanHang.Models.Product>

<partial name="_Notification" />
<div class="row mb-4">
    <div class="col-md-6">
        <h2>LIST PRODUCT</h2>
    </div>
    <a asp-action="Add" class="btn btn-primary">
        <i class="bi bi-plus-square-fill"></i> Add new
    </a>

</div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.Price</td>
                <td>@x.Category.Name</td>
                <td>
                    @if (x.ImageUrl != null)
                    {
                        <img src="@x.ImageUrl" style="width:100px" />
                    }
                </td>
                <td>
            
                    <a asp-controller="Product" asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>